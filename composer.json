{
    "name": "hiraeth/fastroute",
    "description": "FastRoute integration for the Hiraeth Nano-Framework",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "license": "MIT",
    "authors": [
        {
            "name":  "Matthew J. Sahagian",
            "email": "matthew.sahagian@gmail.com",
            "role":  "Lead Architect / Developer"
        }
    ],
    "provide": {
        "hiraeth/routing-imp": "3.0.0"
    },
    "require": {
        "hiraeth/app": "^3.0",
        "hiraeth/routing": "^3.0",
        "hiraeth/inflector": "^3.0",
        "nikic/fast-route": "^1.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.0",
        "phpunit/phpunit": "^10.0",
	    "hiraeth/diactoros": "^3.0"
    },
    "autoload": {
        "classmap": [
            "src/"
        ]
    },
    "autoload-dev": {
        "classmap": [
            "test/src"
        ]
    },
    "type": "opus-package",
    "extra": {
        "opus": {
            "hiraeth/app": {
                "config": ""
            }
        }
    },
    "config": {
        "allow-plugins": {
            "imarc/opus": true
        }
    }
}
